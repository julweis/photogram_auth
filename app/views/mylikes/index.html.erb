<div class="page-header">
  <h3>My Likes</h3>
</div>




        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <table class="table table-striped table-hover">
              <tr>

                          <% @likes.where(:user_id => current_user.id).each do |mylike| %>
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title"><%= Photo.find(mylike.photo_id).user.username%></h3>
                  </div>
                  <div class="panel-body">
                    <img src="<%= Photo.find(mylike.photo_id).image %>" class="img-responsive" alt="Responsive image">
                  <%= Photo.find(mylike.photo_id).caption%>


                          <form action="/create_comment" method="post">
                            <!-- Hidden input for authenticity token to protect from forgery -->
                            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

                          <input type="hidden" name="photo_id" value="<%=Photo.find(mylike.photo_id).id%>">
                          <input type="text" id="body" name="body" placeholder="Add a comment..."class="form-control" required>
                          <input type="hidden" name="user_id" value="<%=current_user.id%>">

</form>
                    <a href="/photos/<%= Photo.find(mylike.photo_id).id%>" class="btn btn-primary">Show</a>

</div>
</div>



          </tr>
          <% end %>
        </table>
      </div>
    </div>
